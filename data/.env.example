# ===== Telegram配置 =====
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ===== AI配置 =====
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://api.deepseek.com
LLM_MODEL=deepseek-chat

# ===== 管理员配置 =====
# 管理员ID（支持多个ID，用逗号分隔，ID为纯数字）
REPORT_ADMIN_IDS=your_admin_id_here,another_admin_id_here

# ===== 语言配置 =====
# 界面语言（zh-CN - 简体中文，en-US - 英语）
LANGUAGE=zh-CN

# ===== 日志级别配置 =====
# 日志级别（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# ===== 投票功能配置 =====
# 是否启用投票功能（默认开启）
ENABLE_POLL=True

# ===== 数据库配置 =====
# 数据库类型（sqlite 或 mysql）
# - sqlite: 使用本地SQLite数据库（默认，无需额外配置）
# - mysql: 使用MySQL数据库（需要配置下方MySQL连接信息）
DATABASE_TYPE=sqlite

# MySQL数据库配置（仅当DATABASE_TYPE=mysql时需要）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sakura_bot
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=sakura_bot_db
MYSQL_CHARSET=utf8mb4

# MySQL连接池配置
MYSQL_POOL_SIZE=5
MYSQL_MAX_OVERFLOW=10
MYSQL_POOL_TIMEOUT=30

# ===== 问答Bot配置 =====
# 问答Bot的Token（从@BotFather获取，必须与主Bot不同）
QA_BOT_TOKEN=your_qa_bot_token_here

# 是否启用问答Bot（True/False）
QA_BOT_ENABLED=True

# 问答Bot使用限制配置
# 每个用户每日限额（默认3次）
QA_BOT_USER_LIMIT=3

# 每日总限额（默认200次）
QA_BOT_DAILY_LIMIT=200

# 问答Bot人格配置（可选）
# 方式1：直接设置人格文本
# QA_BOT_PERSONA=你是一个专业的技术顾问...
#
# 方式2：指向自定义人格文件
# QA_BOT_PERSONA=data/custom_persona.txt
#
# 如果不设置，将使用 data/qa_persona.txt 中的默认人格

# ===== 向量数据库配置 (v3.0.0) =====
# Embedding API配置
EMBEDDING_API_KEY=your_embedding_api_key_here
EMBEDDING_API_BASE=https://api.siliconflow.cn/v1
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# Reranker API配置
RERANKER_API_KEY=your_reranker_api_key_here
RERANKER_API_BASE=https://api.siliconflow.cn/v1/rerank
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_TOP_K=20
RERANKER_FINAL=5

# 向量数据库存储路径
VECTOR_DB_PATH=data/vectors
